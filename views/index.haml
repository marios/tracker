:javascript
  $(function(){
    $(".collapse").collapse()
  });

#patches.accordion
  - @sets.each do |set|
    .accordion-group
      %div{ :class => "accordion-heading #{set.pushed? ? 'pushed' : ''}"}
        %a{:class => 'accordion-toggle', :'data-toggle' => 'collapse', :'data-parent' => :patches, :href => "#set#{set.id}"}
          %h3
            ="##{set.id}"
            %span{ :style => 'float:right'}
              %i.icon-user
              =set.author
          ="<b>#{Time.parse(set.created_at.to_s).ago_in_words}</b>: "
          ="[rev#{set.revision}, #{format_patch_numbers(set.patches)}]"
      %div{:id => "set#{set.id}", :class => 'accordion-body in collapse', :style => "height: auto; "}
        .accordion-inner
          %table{ :class => 'table table-striped table-bordered'}
            %tbody
              - set.patches.each do |p|
                %tr
                  %td{ :width => '80px', :style => 'text-align: center'}
                    %code=p.commit[-8, 8]
                  %td=p.message
                  %td{ :width => '50px', :style => 'text-align: center'}
                    =format_status p.status
                  %td{ :style => 'text-align : center'}
                    =p.updated_by || '-'
